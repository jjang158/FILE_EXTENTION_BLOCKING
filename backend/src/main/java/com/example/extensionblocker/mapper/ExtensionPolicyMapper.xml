<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.extensionblocker.mapper.ExtensionPolicyMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO extension_policy (namespace, description)
        VALUES (#{namespace}, #{description})
    </insert>

    <select id="findByNamespace" resultType="com.example.extensionblocker.entity.ExtensionPolicy">
        SELECT * FROM extension_policy WHERE namespace = #{namespace}
    </select>

</mapper>
